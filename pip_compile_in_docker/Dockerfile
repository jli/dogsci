FROM python:3.9-slim-buster AS base

# The generate_requirements stage runs pip-compile to update requirements.txt.
# This image expects /reqs/ to be mounted. See bin/pip_compile_in_docker.sh
FROM base AS generate_requirements
RUN pip3 install -U pip pip-tools
CMD pip-compile --upgrade --quiet --no-header --output-file /reqs/requirements.txt /reqs/requirements.in \
  && sed -i '1s/^/# autogenerated by pip_compile_in_docker.sh\n/' /reqs/requirements.txt \
  && echo "done üëç"


FROM base AS yayapp

RUN apt-get update && apt-get install -y --no-install-recommends \
  cowsay \
  && rm -rf /var/lib/apt/lists/*

COPY requirements/requirements.txt /tmp
RUN pip3 install --upgrade pip
RUN pip3 install -r /tmp/requirements.txt

RUN adduser --system --group --shell /bin/bash bot
WORKDIR /home/bot
USER bot

COPY --chown=bot:bot src ./app

CMD ["python3", "app/yay.py"]
